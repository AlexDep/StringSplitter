#include <iostream>
#include <string.h>

using namespace std;

void extract_word(char *str, char *delimiter, char result[10][50]){
    int k=0;
    int length = strlen(str);
    int i=0,j=0;

    while(k<length)
    {
        j=0;
        while(str[k]!=delimiter[0])
        {
            result[i][j]=str[k];
            k++;
            j++;
        }
        i++;
        k++;
    }
}

int main()
{
    char  lotOfWord[]="salut;bye;konichiwa;bonjour;";
    char  delim[]=";";
    int i=0;
    char result[10][50]={""};
    extract_word(lotOfWord,delim,result);
    for(i = 0; i < 4; i++) {
        cout << result[i] << "\n";
    }
    return 0;
}
